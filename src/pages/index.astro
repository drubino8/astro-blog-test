---
const response = await fetch('https://jsonplaceholder.typicode.com/posts');
const data = await response.json();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Astro Blog</title>
	</head>
	
	<body>
		<h1>{data[0].title}</h1>
		<p>{data[0].body}</p>
	</body>
</html>
